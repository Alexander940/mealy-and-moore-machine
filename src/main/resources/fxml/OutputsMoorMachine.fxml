<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400" prefWidth="600" style="-fx-background-color: #2C3E50;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label layoutX="192.0" layoutY="33.0" text="Moore State Machine" textFill="WHITE">
            <font>
                <Font size="30.0" />
            </font>
        </Label>
        <TableView fx:id="tableTransitions" layoutX="36.0" layoutY="83.0" prefHeight="250.0" prefWidth="529.0">
