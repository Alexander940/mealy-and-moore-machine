                <TableColumn fx:id="colCurrentState" prefWidth="75.0" text="Current State" />
                <TableColumn fx:id="colInput" prefWidth="75.0" text="Input" />
                <TableColumn fx:id="colNextState" prefWidth="75.0" text="Next State" />
